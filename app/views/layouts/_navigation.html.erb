<div class="contain-to-grid">
  <nav class="top-bar" data-topbar>
    <section class="top-bar-section">
      <!-- Right Nav Section -->
      <ul class="right nav">
        <li class="divider"></li>
        <li class="<%= 'active' if params[:controller] == 'home' %>">
          <%= link_to 'صفحه اصلی', root_path %>
        </li>
        <li class="<%= 'active' if params[:controller] == 'posts' %>">
          <%= link_to 'وبلاگ', posts_path %>
        </li>
        <li class="<%= 'active' if params[:controller] == 'blog/articles' %>">
          <%= link_to 'لذت برنامه نویسی', '/blog' %>
