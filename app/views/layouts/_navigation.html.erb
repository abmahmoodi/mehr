              <%= link_to 'ایمیل: ' + current_user.email, '#' %>
            </li>
            <li class="divider"></li>
            <li>
              <%= link_to 'خروج <i class="fa fa-sign-out" ></i>'.html_safe, destroy_user_session_path,
